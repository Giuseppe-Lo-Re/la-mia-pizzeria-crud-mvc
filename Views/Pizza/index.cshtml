@model List<Pizza>

@if (Model.Count() == 0)
{
    <h4 class="text-center">Pizze non presenti</h4>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Immagine</th>
                <th>Prezzo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Detail",new {id = pizza.Id})">@pizza.Id</a></td>

                    @*Title*@
                    <td class="title">@pizza.Name</td>

                    @*Description*@
                    <td class="description">
                        @pizza.Description
                    </td>

                    @*Image*@
                    <td class="image">
                        <img class="post-list-image" src="@pizza.Image" alt="pizza" width="600" height="300">
                    </td>

                    @*Price*@
                    <td class="price">
                        @pizza.Price euro
                    </td>
                    <td>
                        @*Details button*@
                        <a class="btn btn-info" asp-area="" asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id">Dettagli</a>                        
                    <td>
                        @*Update button*@
                        <a class="btn btn-warning" asp-area="" asp-controller="Pizza" asp-action="Update" asp-route-id="@pizza.Id">Modifica</a>
                    </td>
                    <td>
                        @*Delete button*@
                        <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" method="post">
                            <button type="submit" class="btn btn-danger">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
